        value="<%= transaction.transacation_type %>" required>
    </div>

    <div class="form-group">
      <label for="name">name </label>
      <input onchange="onFormChange()" type="String" class="form-control" id="name" name="name" 
      value="<%= transaction.name %>" required>
    </div>

    <div class="form-group">
      <label for="age">accountNumber</label>
      <input onchange="onFormChange()" type="number" class="form-control" id="accountNumber" name="accountNumber"
        value="<%= transaction.accountNumber %>" required>
    </div>
    <div class="form-group">
      <label for="age">transaction_date</label>
      <input onchange="onFormChange()" type="date" class="form-control" id="transaction_date" name="transaction_date"
        value="<%= transaction.transaction_date %>" required>
    </div>
  </div>
</div>


